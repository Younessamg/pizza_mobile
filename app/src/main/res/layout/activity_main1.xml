<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Pizza Visualization Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="320dp">

                <!-- Background pizza image -->

                <ImageView
                    android:id="@+id/pizzaImage"
                    android:layout_width="355dp"
                    android:layout_height="260dp"
                    android:alpha="0.0"
                    android:scaleType="centerCrop" />

                <ma.ensa.project.AnimatedPizzaView
                    android:id="@+id/animatedPizzaView"
                    android:layout_width="338dp"
                    android:layout_height="247dp"
                    android:layout_gravity="center"
                    tools:ignore="MissingClass" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pizzaNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            tools:text="Nom de la pizza" />

        <!-- Size Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisissez votre taille"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/sizeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F8F8F8"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/smallSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Petite"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>

                <RadioButton
                    android:id="@+id/mediumSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:checked="true"
                    android:text="Moyenne"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>

                <RadioButton
                    android:id="@+id/largeSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grande"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Crust Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type de croÃ»te"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"/>

            <Spinner
                android:id="@+id/crustSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#F8F8F8" />
        </LinearLayout>

        <!-- Toppings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garnitures"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F8F8"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/pepperoniCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pepperoni"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>

                <CheckBox
                    android:id="@+id/mushroomsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Champignons"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>

                <CheckBox
                    android:id="@+id/onionsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oignons"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>

                <CheckBox
                    android:id="@+id/sausageCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saucisse"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>

                <CheckBox
                    android:id="@+id/extraCheeseCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extra fromage"
                    android:textColor="@android:color/black"
                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Order Section -->
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/orderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commander"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:textSize="18sp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>